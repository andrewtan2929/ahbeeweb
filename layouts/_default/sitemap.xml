{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Home page -->
  <url>
    <loc>{{ .Site.BaseURL }}</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
  </url>

  <!-- Other pages -->
  {{ range where .Site.RegularPages "Type" "not in" (slice "categories" "tags") }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <lastmod>{{ (.Lastmod | default .Date).Format "2006-01-02" }}</lastmod>
  </url>
  {{ end }}
</urlset>